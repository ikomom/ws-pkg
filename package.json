{
  "name": "@ws-pkg/monorepo",
  "private": true,
  "packageManager": "pnpm@7.12.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json && pnpm -r publish --access public --no-git-checks && pnpm -r run publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "server": "pnpm -C packages/server run server",
    "play": "pnpm -C playground dev",
    "clean": "rimraf dist",
    "postinstall": "npm run build"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.0",
    "@antfu/utils": "^0.7.2",
    "@types/node": "^14.14.31",
    "bumpp": "^8.2.1",
    "eslint": "^8.23.1",
    "esno": "^0.16.3",
    "pnpm": "^7.12.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3",
    "vite": "^4.3.8",
    "vite-plugin-inspect": "^0.7.26",
    "vitest": "^0.31.1"
  }
}
